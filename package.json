{
	"name": "svelte-ts-demo",
	"version": "0.0.1",
	"license": "MIT",
	"scripts": {
		"start": "yarn cleanup && vite dev",
		"build": "yarn cleanup && vite build",
		"package": "yarn cleanup && svelte-kit package",
		"preview": "yarn cleanup && vite preview",
		"cleanup": "yarn format && yarn lint &&  yarn check && yarn prepare",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"prepare": "yarn smui-theme-light && yarn smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark"
	},
	"devDependencies": {
		"@playwright/test": "^1.22.2",
		"@smui/button": "^6.0.0",
		"@smui/card": "^6.0.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "^1.0.0-next.405",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"smui-theme": "^6.0.0",
		"svelte": "^3.46.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.0.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/fira-mono": "^4.5.0",
		"cookie": "^0.4.1"
	},
	"volta": {
		"node": "18.7.0",
		"yarn": "1.22.19"
	}
}
